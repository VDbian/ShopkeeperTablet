<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.administrator.shopkeepertablet.viewmodel.parish.PayViewModel"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="354px"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:background="@color/color23cac0">

                <ImageView
                    android:id="@+id/rl_back"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4px"
                    android:src="@mipmap/nav_repeat"></ImageView>

                <LinearLayout
                    android:id="@+id/ll_room_table"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8px"
                    android:layout_toRightOf="@+id/rl_back"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_room_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:text="@{viewModel.tableEntity.TableName}"
                        android:textColor="@color/colorWhite"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_room_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{viewModel.roomName}"
                        android:textColor="@color/colorWhite"
                        android:textSize="14px" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_people_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25px"
                    android:layout_marginTop="4px"
                    android:layout_toRightOf="@+id/ll_room_table"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_people_num"
                        android:layout_width="46px"
                        android:layout_height="27px"
                        android:layout_marginTop="4px"
                        android:background="@drawable/shape_order_dishes_num_bg"
                        android:gravity="center"
                        android:text="@{@string/people_num(viewModel.tableEntity.personCounts)}"
                        android:textColor="@color/colorWhite"
                        android:textSize="14px" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="46px"
                        android:layout_height="18px"
                        android:layout_gravity="center"
                        android:background="@color/color1ca29a"
                        android:gravity="center"
                        android:text="@{viewModel.time}"
                        android:textColor="@color/colorWhite"
                        android:textSize="14px" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_cancel"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12px">

                    <ImageView
                        android:layout_width="22px"
                        android:layout_height="22px"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/nav_close" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_bottom"
                android:layout_below="@+id/rl_title"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16px"
                        android:gravity="center_vertical"
                        android:text="@{@string/total_price(viewModel.price)}"
                        android:textColor="@color/colorffb001"
                        android:textSize="17px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rlv_order"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1" />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="16px"
            >
            <LinearLayout
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >
                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="会员识别"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />
                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="优惠券"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />
                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="权限打折"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />
                <TextView
                    android:id="@+id/tv_remission"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="权限减免"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />
                <TextView
                    android:id="@+id/tv_free"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="权限免单"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />
                <TextView
                    android:id="@+id/tv_else_discounts"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:textSize="20px"
                    android:textColor="@color/color97a3aa"
                    android:text="其他优惠"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    />



            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colore5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/ll_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff0d5"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:layout_marginTop="12px"
                        android:textSize="15px"
                        android:textColor="@color/color666666"
                        android:text="@string/member_num"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8px"
                        android:layout_marginLeft="12px"
                        android:layout_marginRight="12px"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15px"
                            android:textColor="@color/color666666"
                            android:text="@string/member_name"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15px"
                            android:textColor="@color/color666666"
                            android:text="@string/member_phone"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8px"
                        android:layout_marginLeft="12px"
                        android:layout_marginRight="12px"
                        android:layout_marginBottom="12px"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15px"
                            android:textColor="@color/color666666"
                            android:text="@string/member_balance"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15px"
                            android:textColor="@color/color666666"
                            android:text="@string/member_points"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_member"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    >
                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="权限打折"
                        android:textSize="18px"
                        android:textColor="@color/color97a3aa"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="8.8折"
                        android:textSize="18px"
                        android:textColor="@color/color97a3aa"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="-￥15.00"
                        android:textSize="18px"
                        android:textColor="@color/color97a3aa"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_expand_close"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/line_discount"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    android:layout_below="@+id/ll_discount"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    />
                <LinearLayout
                    android:id="@+id/ll_remission"
                    android:layout_width="match_parent"
                    android:layout_height="44px"
                    android:orientation="horizontal"
                    android:layout_below="@+id/line_discount"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    >
                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="权限减免"
                        android:textSize="18px"
                        android:textColor="@color/color97a3aa"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="-￥15.00"
                        android:textSize="18px"
                        android:textColor="@color/color97a3aa"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_expand_close"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/line_remission"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colore5e5e5"
                    android:layout_below="@+id/ll_remission"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    />

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/line_remission"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/original(viewModel.price)}"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/amount_payable(viewModel.getShouldPay())}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8px"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/ware_price(viewModel.warePrice)}"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/refundable_mount(viewModel.getShouldReturn())}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8px"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/discounts(viewModel.discount)}"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/other_pay(viewModel.getPay())}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8px"
                        >
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="18px"
                            android:textColor="@color/color97a3aa"
                            android:text="@{@string/earnest(viewModel.payment)}"
                            />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="15px"
                            android:textColor="@color/color97a3aa"
                            android:text="@string/member_points"
                            android:visibility="invisible"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_price"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    >
                    <LinearLayout
                        android:layout_width="128px"
                        android:layout_height="72px"
                        android:orientation="vertical"
                        android:background="@drawable/shape_pay_way"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现金"
                            android:textColor="#798795"
                            android:textSize="17px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8px"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20px"
                            android:textColor="#F74F45"
                            android:text="￥50.00"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="128px"
                        android:layout_height="72px"
                        android:orientation="vertical"
                        android:layout_marginLeft="16px"
                        android:background="@drawable/shape_pay_way"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="银行卡"
                            android:textColor="#798795"
                            android:textSize="17px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8px"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20px"
                            android:textColor="#F74F45"
                            android:text="￥50.00"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="128px"
                        android:layout_height="72px"
                        android:orientation="vertical"
                        android:layout_marginLeft="16px"
                        android:background="@drawable/shape_pay_way"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员卡"
                            android:textColor="#798795"
                            android:textSize="17px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8px"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20px"
                            android:textColor="#F74F45"
                            android:text="￥50.00"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>

                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72px"
                    android:background="@color/colorWhite"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="162px"
                            android:layout_height="52px"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_order_dishes_order_bg"
                            android:gravity="center"
                            android:text="@string/pay"
                            android:textColor="@color/colorWhite"
                            android:textSize="18px" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv_scan_pay"
                            android:layout_width="162px"
                            android:layout_height="52px"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_scan_pay_bg"
                            android:gravity="center"
                            android:text="@string/scan_pay"
                            android:textColor="@color/colorWhite"
                            android:textSize="18px" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</layout>