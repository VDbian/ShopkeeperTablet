<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    
    <LinearLayout
        android:layout_width="600px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:textSize="20px"
                android:textColor="@color/color666666"
                android:layout_marginLeft="16px"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@mipmap/ic_expand_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16px"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colore5e5e5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            >
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/order_num"
                android:textSize="16px"
                android:textColor="#C0C8CE"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                />
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/order_time"
                android:textSize="16px"
                android:textColor="#C0C8CE"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_order_bg"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:orientation="horizontal"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/order_table"
                    android:textSize="16px"
                    android:textColor="@color/color666666"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/order_people"
                    android:textSize="16px"
                    android:gravity="center_vertical"
                    android:textColor="@color/color666666"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colore5e5e5"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:orientation="horizontal"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/order_price"
                    android:textSize="16px"
                    android:textColor="@color/color666666"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/order_discount"
                    android:textSize="16px"
                    android:gravity="center_vertical"
                    android:textColor="@color/color666666"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colore5e5e5"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:text="@string/order_pay"
                android:textSize="20px"
                android:gravity="center_vertical"
                android:textColor="@color/color666666"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colore5e5e5"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="#97A3AA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16px"
                    android:text="主扫支付宝"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18px"
                    />
                
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜品信息"
            android:textSize="16px"
            android:textColor="#C0C8CE"
            android:layout_marginTop="8px"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="16px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@drawable/shape_order_bg"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginBottom="32px"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:orientation="horizontal"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="菜品名称"
                    android:textSize="16px"
                    android:textColor="#999999"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="数量/重量"
                    android:textSize="16px"
                    android:textColor="#999999"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="单价"
                    android:textSize="16px"
                    android:textColor="#999999"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="价格"
                    android:textSize="16px"
                    android:textColor="#999999"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colore5e5e5"
                android:layout_marginRight="16px"
                android:layout_marginLeft="16px"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_order_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                ></android.support.v7.widget.RecyclerView>
            
        </LinearLayout>
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72px"
            android:orientation="horizontal"
            android:background="@color/colore5e5e5"
            >
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="162px"
                android:layout_height="52px"
                android:layout_marginLeft="10px"
                android:layout_marginTop="10px"
                android:background="@drawable/shape_order_dishes_order_bg"
                android:gravity="center"
                android:text="反结账"
                android:textColor="@color/colorWhite"
                android:textSize="18px" />

            <TextView
                android:id="@+id/tv_scan_pay"
                android:layout_width="162px"
                android:layout_height="52px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:background="@drawable/shape_scan_pay_bg"
                android:gravity="center"
                android:text="补打账单"
                android:textColor="@color/colorWhite"
                android:textSize="18px" />

        </LinearLayout>
    </LinearLayout>
    
</layout>