<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="100px"
        android:layout_height="112px"
        android:orientation="vertical"
        android:background="@drawable/shape_table_bg"
        >
        <TextView
            android:id="@+id/tv_table_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="2号"
            android:textSize="17px"
            android:layout_marginLeft="8px"
            android:layout_marginTop="8px"
            />
        <TextView
            android:id="@+id/tv_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="8人"
            android:textSize="12px"
            android:layout_marginTop="10px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8px"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_no_leisure"
            android:layout_width="78px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42px"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34px"
                android:text="￥2500.00"
                android:textSize="14px"
                android:gravity="center"
                android:background="@color/colorWhite"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:textSize="12px"
                android:text="01:30"
                android:gravity="center"
                android:background="@color/color19000000"
                />
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_leisure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/state_leisure"
            android:textSize="14px"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>
    
</layout>