<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.administrator.shopkeepertablet.viewmodel.SettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorf0f5f6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="228px"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="53px"
                android:gravity="center_vertical"
                android:layout_marginLeft="36px"
                android:text="系统设置"
                android:textColor="@color/color798795"
                android:textSize="22px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:paddingLeft="36px"
                android:text="@string/setting_room"
                android:textColor="@color/color798795"
                android:textSize="17px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />

            <TextView
                android:id="@+id/tv_food"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:paddingLeft="36px"
                android:text="@string/setting_food"
                android:textColor="@color/color798795"
                android:textSize="17px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:paddingLeft="36px"
                android:text="设置主机"
                android:textColor="@color/color798795"
                android:textSize="17px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:paddingLeft="36px"
                android:text="取消主机"
                android:textColor="@color/color798795"
                android:textSize="17px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:gravity="center_vertical"
                android:paddingLeft="36px"
                android:text="退出系统"
                android:textColor="@color/color798795"
                android:textSize="17px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorf2f2f2" />


        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/color19000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginTop="54px">

            <LinearLayout
                android:id="@+id/ll_id"
                android:layout_width="480px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_login_edit"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/setting_id"
                    android:textColor="@color/color666666"
                    android:textSize="18px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/colore5e5e5" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="16px"
                    android:text="@={viewModel.id}"
                    android:textColor="@color/color333333"
                    android:textSize="18px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="118px"
                android:layout_height="match_parent"
                android:layout_marginLeft="16px"
                android:layout_toRightOf="@+id/ll_id"
                android:background="@drawable/shape_login_button"
                android:gravity="center"
                android:text="@string/setting_confirm"
                android:textColor="@color/colorWhite"
                android:textSize="22px" />

        </RelativeLayout>

    </LinearLayout>

</layout>