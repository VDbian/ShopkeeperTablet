<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="540px"
        android:layout_height="581px"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_copies"
                android:layout_width="wrap_content"
                android:layout_height="48px"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:background="@drawable/shape_count_bg"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_num_reduce"
                    android:layout_width="44px"
                    android:layout_height="48px">

                    <ImageView
                        android:layout_width="16px"
                        android:layout_height="16px"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/form_reduce" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="42px"
                    android:layout_height="48px"
                    android:background="@color/colore5e5e5"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color333333"
                    android:textSize="18px" />

                <RelativeLayout
                    android:id="@+id/rl_num_plus"
                    android:layout_width="44px"
                    android:layout_height="48px">

                    <ImageView
                        android:layout_width="16px"
                        android:layout_height="16px"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/form_plus" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weigh"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="85px"
                    android:layout_height="50px"
                    android:background="@drawable/shape_order_weight_bg"
                    android:gravity="center"
                    android:text="2.5"
                    android:textColor="@color/color000000"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/tv_weigh_unit"
                    android:layout_width="44px"
                    android:layout_height="50px"
                    android:background="@drawable/shape_count_bg"
                    android:gravity="center"
                    android:text="kg"
                    android:textColor="@color/colorc0c8ce"
                    android:textSize="17px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="红烧狮子头"
                android:textColor="@color/color666666"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_price_and_unit"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:layout_weight="1"
                android:text="￥150.00/小份"
                android:textSize="17px" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12px"
                android:src="@mipmap/oprate_close" />

        </LinearLayout>

        <View
            android:id="@+id/view_line_title"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_title"
            android:background="@color/colore5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_confirm"
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color4ab6f6"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/colorWhite"
                android:textSize="18px" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/rl_confirm"
            android:background="@color/colore5e5e5" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rlv_property"-->
        <!--android:layout_width="135px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/view_line_title"-->
        <!--android:layout_above="@+id/view_line_bottom"-->
        <!--android:background="@color/colorf0f3f6"-->
        <!--/>-->
        <LinearLayout
            android:id="@+id/ll_property"
            android:layout_width="135px"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_line_bottom"
            android:layout_below="@+id/view_line_title"
            android:background="@color/colorf0f3f6"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_spec"
                android:layout_width="110px"
                android:layout_height="48px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12px"
                android:background="@drawable/shape_count_bg">

                <TextView
                    android:id="@+id/tv_spec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color23cac0"
                    android:gravity="center"
                    android:text="规格"
                    android:textColor="@color/colorWhite"
                    android:textSize="18px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kouwei"
                android:layout_width="110px"
                android:layout_height="48px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12px"
                android:background="@drawable/shape_count_bg">

                <TextView
                    android:id="@+id/tv_kouwei"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="做法"
                    android:textColor="@color/color666666"
                    android:textSize="18px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="110px"
                android:layout_height="48px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12px"
                android:background="@drawable/shape_count_bg">

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="加料"
                    android:textColor="@color/color666666"
                    android:textSize="18px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_remark"
                android:layout_width="110px"
                android:layout_height="48px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12px"
                android:background="@drawable/shape_count_bg"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/color666666"
                    android:textSize="18px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_line_bottom"
            android:layout_below="@+id/view_line_title"
            android:layout_toRightOf="@+id/ll_property"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"
                android:drawableLeft="@drawable/shape_oval_c0c8ce"
                android:drawablePadding="8px"
                android:text="规格"
                android:textColor="@color/color97a3aa"
                android:textSize="18px" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginTop="16px"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kouwei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_line_bottom"
            android:layout_below="@+id/view_line_title"
            android:layout_toRightOf="@+id/ll_property"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"
                android:drawableLeft="@drawable/shape_oval_c0c8ce"
                android:drawablePadding="8px"
                android:text="做法"
                android:textColor="@color/color97a3aa"
                android:textSize="18px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="16px"
                android:layout_marginRight="16px"
                android:background="@drawable/shape_login_edit"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="自定义"
                    android:textColor="@color/color333333"
                    android:textSize="18px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/colore5e5e5" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="16px"
                    android:text=""
                    android:textColor="@color/color333333"
                    android:textSize="18px" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_kouwei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginTop="16px"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_line_bottom"
            android:layout_below="@+id/view_line_title"
            android:layout_toRightOf="@+id/ll_property"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"
                android:drawableLeft="@drawable/shape_oval_c0c8ce"
                android:drawablePadding="8px"
                android:text="加料"
                android:textColor="@color/color97a3aa"
                android:textSize="18px" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginTop="16px"
                android:layout_marginRight="16px"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_line_bottom"
            android:layout_below="@+id/view_line_title"
            android:layout_toRightOf="@+id/ll_property"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="24px"
                android:drawableLeft="@drawable/shape_oval_c0c8ce"
                android:drawablePadding="8px"
                android:text="备注"
                android:textColor="@color/color97a3aa"
                android:textSize="18px" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="16px"
                android:text=""
                android:gravity="left"
                android:paddingLeft="4px"
                android:paddingTop="4px"
                android:textSize="18px"
                android:textColor="@color/color000000"
                android:background="@drawable/shape_login_edit" />
        </LinearLayout>


    </RelativeLayout>

</layout>