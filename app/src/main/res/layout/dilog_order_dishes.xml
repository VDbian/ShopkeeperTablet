<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="540px"
        android:layout_height="581px"
        android:background="@color/colorWhite"
        >
         <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48px"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_count_bg"
            >
            <RelativeLayout
                android:id="@+id/rl_num_reduce"
                android:layout_width="44px"
                android:layout_height="48px"
                >
                <ImageView
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:src="@mipmap/form_reduce"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="42px"
                android:layout_height="48px"
                android:background="@color/colore5e5e5"
                android:text="1"
                android:gravity="center"
                android:textSize="18px"
                android:textColor="@color/color333333"
                />
            <RelativeLayout
                android:id="@+id/rl_num_plus"
                android:layout_width="44px"
                android:layout_height="48px">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:src="@mipmap/form_plus"
                    />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color666666"
            android:textSize="22px"
            android:text="红烧狮子头"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            />

        <TextView
            android:id="@+id/tv_price_and_unit"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_gravity="center_vertical"
            android:textSize="17px"
            android:text="￥150.00/小份"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12px"
            android:src="@mipmap/oprate_close"
            />

    </LinearLayout>

        <View
            android:id="@+id/view_line_title"
            android:layout_below="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colore5e5e5"/>
        
        <RelativeLayout
            android:id="@+id/rl_confirm"
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="120px"
                android:layout_height="match_parent"
                android:background="@color/color4ab6f6"
                android:layout_alignParentRight="true"
                android:text="@string/confirm"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textSize="18px"
                />
        </RelativeLayout>

        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colore5e5e5"
            android:layout_above="@+id/rl_confirm"
            />
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_property"
            android:layout_width="135px"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_line_title"
            android:layout_above="@+id/view_line_bottom"
            android:background="@color/colorf0f3f6"
            />

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_line_title"
            android:layout_above="@+id/view_line_bottom"
            android:layout_toRightOf="@+id/rlv_property"
            >


        </FrameLayout>
    </RelativeLayout>

</layout>