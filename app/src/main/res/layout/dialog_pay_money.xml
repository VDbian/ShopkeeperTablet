<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="360px"
            android:layout_height="360px"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52px">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16px"
                    android:gravity="center_vertical"
                    android:text="现金"
                    android:textColor="@color/color666666"
                    android:textSize="20px" />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16px"
                    android:src="@mipmap/ic_expand_close" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colore5e5e5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="320px"
                    android:layout_height="50px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_login_edit"
                    android:inputType="number|numberDecimal"
                    android:padding="8px"
                    android:text=""
                    android:textColor="@color/color666666"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/et_money"
                    android:layout_alignLeft="@+id/et_money"
                    android:text="请输入支付金额"
                    android:textColor="@color/color666666"
                    android:textSize="18px"
                    android:layout_marginBottom="16px"
                    />

            </RelativeLayout>


            <View
                android:id="@+id/view_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="32px"
                android:background="@color/colore5e5e5" />

            <RelativeLayout
                android:id="@+id/rl_confirm"
                android:layout_width="match_parent"
                android:layout_height="52px">

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/color4ab6f6"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/colorWhite"
                    android:textSize="18px" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>